  "licence": "ISC",
  "devDependencies": {
    "@cucumber/cucumber": "^9.2.0",
    "@playwright/test": "^1.35.1",
    "dotenv": "^16.3.1",
    "moment": "^2.29.4",
    "multiple-cucumber-html-reporter": "^3.4.0",
    "prettier": "^2.8.8",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6",
    "winston": "^3.9.0"
  },
  "dependencies": {
    "minimat": "^1.1.1",
    "minimatch": "^9.0.3"
  }
}
